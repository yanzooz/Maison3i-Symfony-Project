        <a href="{{ path('app_logout') }}" class="text-gray-600 hover:text-red-600 transition">DÃ©connexion</a>
      {% else %}
        <a href="{{ path('app_login') }}" class="text-gray-700 hover:text-indigo-600 transition">Connexion</a>
        <a href="{{ path('app_register') }}"

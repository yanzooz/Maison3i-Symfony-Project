{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow">
    <div>
      <h2 class="mt-2 text-center text-3xl font-extrabold text-gray-900">Créer un compte</h2>
    </div>

    {{ form_start(registrationForm) }}

    <div class="mb-4">
      {{ form_label(registrationForm.email) }}
      {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'}}) }}
      {% if registrationForm.email.vars.errors|length > 0 %}
        <p class="text-sm text-red-600 mt-1">
          {{ registrationForm.email.vars.errors|first.message }}
        </p>
      {% endif %}
    </div>

    <div class="mb-4">
      {{ form_label(registrationForm.plainPassword.first) }}
      {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'}}) }}
      {% if registrationForm.plainPassword.first.vars.errors|length > 0 %}
        <p class="text-sm text-red-600 mt-1">
          {{ registrationForm.plainPassword.first.vars.errors|first.message }}
        </p>
      {% endif %}
    </div>

    <div class="mb-6">
      {{ form_label(registrationForm.plainPassword.second) }}
      {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'}}) }}
      {% if registrationForm.plainPassword.second.vars.errors|length > 0 %}
        <p class="text-sm text-red-600 mt-1">
          {{ registrationForm.plainPassword.second.vars.errors|first.message }}
        </p>
      {% endif %}
    </div>

    <div>
      <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700">
        S’inscrire
      </button>
    </div>

    {{ form_end(registrationForm) }}

    <p class="mt-6 text-sm text-center text-gray-600">
      Vous avez déjà un compte ?
      <a href="{{ path('app_login') }}" class="text-indigo-600 hover:underline">Se connecter</a>
    </p>
  </div>
</div>
{% endblock %}

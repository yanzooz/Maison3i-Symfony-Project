{% extends 'base.html.twig' %}

{% block title %}Maison3i - Accueil{% endblock %}

{% block body %}
<!-- Hero section -->
<section class="relative w-full h-[90vh] bg-black">
    <img src="{{ asset('image/assets/TESTTEST-fotor-enhance-20250504223001.jpg') }}" alt="Collection Maison3i" class="w-full h-full object-cover opacity-80">
    <div class="absolute inset-0 flex flex-col justify-center items-center text-white text-center px-4">
        <h1 class="text-5xl font-extrabold text-white text-center mb-6">M3ISON STORE</h1>
        <a href="{{ path('app_products') }}" class="bg-white text-black px-6 py-3 rounded-md font-semibold hover:bg-gray-200 transition">Voir la collection</a>
    </div>
  </section>
  

<!-- Collections section -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-10">Nos cat√©gories</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {% for category in categories %}
        <a href="{{ path('app_products') ~ '?category=' ~ category.id }}"
           class="group relative overflow-hidden rounded-lg shadow-lg block">
          <img src="{{ asset('image/assets/' ~ category.image) }}"
               alt="{{ category.name }}"
               class="w-full h-80 object-cover transform group-hover:scale-105 transition duration-500 ease-in-out">
          <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
            <span class="text-white text-xl font-semibold uppercase tracking-wide">{{ category.name }}</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>


{% endblock %}
